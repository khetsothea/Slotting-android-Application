<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:hardwareAccelerated="false"
    android:largeHeap="true"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.developer.myownapp.slotting.Payment"
    tools:showIn="@layout/activity_payment"
    android:background="#12f4d5">

    <Button
        android:layout_width="wrap_content"
        android:hardwareAccelerated="false"
        android:layout_height="wrap_content"
        android:text="PAY"
        android:id="@+id/pay"
        android:layout_below="@+id/hbank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="SBI Bank"
        android:id="@+id/sbank"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#6df60b" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="HDFC BANK"
        android:id="@+id/hbank"
        android:layout_below="@+id/sbank"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#f708d3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signout"
        android:id="@+id/sout"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/pay"
        android:layout_alignStart="@+id/pay" />

</RelativeLayout>
